<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"

    android:padding="5dp">


    <TextView
        android:id="@+id/memS_row_memId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        android:hint="011010101000213"
        android:paddingTop="2dp"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/memS_row_mem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:hint="Name"
        android:paddingRight="5dp"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/memS_row_memId"
        android:layout_above="@+id/tv_LayR4Name"
        android:layout_toStartOf="@+id/ibtn_group_sear_edit"
        android:layout_toLeftOf="@+id/ibtn_group_sear_edit" />


    <ImageButton

        android:id="@+id/ibtn_group_sear_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/goto_b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sex"
        android:id="@+id/tv_LayR4Name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/memSear_tv_AddressName"
        android:layout_toLeftOf="@+id/memSear_tv_AddressName"
        android:layout_alignTop="@+id/memSear_tv_AddressName" />

    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="er"
        android:id="@+id/memSear_tv_AddressName"
        android:layout_toLeftOf="@+id/ibtn_group_sear_edit"
        android:layout_alignBottom="@+id/ibtn_group_sear_edit"
        android:layout_alignLeft="@+id/memS_row_mem_name"
        android:layout_alignStart="@+id/memS_row_mem_name" />


</RelativeLayout>

