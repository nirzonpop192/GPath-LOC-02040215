<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.siddiquinoor.restclient.activity.MainActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <LinearLayout
        android:id="@+id/welcome_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Welcome"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="fullName"
                android:textColor="#333333"
                android:textSize="12dp" />
        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollableContents"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/welcome_message"
        android:background="#FFFFFF">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="40dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp">
            <!-- load Country section
             IF ANNY THING GOES WRONG COMMENT THE BELO LINE-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Country"
                    android:textSize="15dp" />


                <Spinner
                    android:id="@+id/spDCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|right"
                    android:layout_marginLeft="50dp"
                    android:background="#FFFFFF"
                    android:drawSelectorOnTop="true"
                    android:padding="2dp"

                    android:textColor="#939393" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".55"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="left"
                        android:text="ACTIVITY"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/btnGroup"
                        style="@style/btn_main_page"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.125"
                        android:drawableLeft="@drawable/group_unite"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="  Group" />

                    <Button
                        android:id="@+id/btnNewReg"
                        style="@style/btn_main_page"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.125"
                        android:drawableLeft="@drawable/registration"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"

                        android:text="  Registration" />

                    <Button
                        android:id="@+id/btnAssinge"
                        style="@style/btn_main_page"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.125"
                        android:drawableLeft="@drawable/assign"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="  Assign" />

                    <Button
                        android:id="@+id/btnGraduation"
                        style="@style/btn_main_page"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.125"
                        android:drawableLeft="@drawable/exit"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="  Graduation" />

                    <Button
                        android:id="@+id/btnCardRequest"
                        style="@style/btn_main_page"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.125"
                        android:drawableLeft="@drawable/card_request"

                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="  Card Request" />

                    <Button
                        android:id="@+id/btnService"
                        style="@style/btn_main_page"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.125"
                        android:drawableLeft="@drawable/service"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="  Service" />

                    <Button
                        android:id="@+id/btnDistribution"
                        style="@style/btn_main_page"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.125"
                        android:drawableLeft="@drawable/distribution"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="  Distribution" />

                    <Button
                        android:id="@+id/btnGPS"
                        style="@style/btn_main_page"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.125"
                        android:drawableLeft="@drawable/map_btn_icon"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="  GPS" />


                    <Button
                        android:id="@+id/btnSummaryReport"
                        style="@style/btn_main_page"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.125"
                        android:drawableLeft="@drawable/summession_b"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="  Summary" />


                    <Button
                        android:id="@+id/btnDynamicData"
                        style="@style/btn_main_page"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.125"
                        android:drawableLeft="@drawable/dynamic_icon_42"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingStart="15dp"
                        android:text="  Dynamic Data" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight=".45"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:text="APK ON DEVICE"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_horizontal"
                            android:text="Version Name"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/log_in_version_lable" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_horizontal"
                            android:text="Operation Mode"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_operation_mode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_horizontal"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:gravity="center_horizontal"
                            android:text="GEO-DATA"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_geo_data_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_horizontal"
                            android:text="XXXXXX-XXXXXXXX" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="Last Sync"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_last_sync"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="N/A" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="Sync Required"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_sync_required"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnSyncRecord"
                    style="@style/btn_sync"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight=".55"
                    android:drawableLeft="@drawable/sync"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="  SYNC"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnLogout"
                    style="@style/btn_logout"
                    android:layout_marginLeft="3dp"
                    android:layout_weight=".45"
                    android:drawableLeft="@drawable/logout"
                    android:gravity="center_vertical"
                    android:paddingLeft="92dp"
                    android:text="  Logout"

                    android:textSize="15sp" />
            </LinearLayout>

            <Button
                android:layout_width="310dp"
                android:id="@+id/btnRestoreDB"
                style="@style/btn_main_page"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"

                android:drawableLeft="@drawable/database_import_32"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="  Restore DB" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
